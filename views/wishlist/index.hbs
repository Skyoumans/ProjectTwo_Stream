<div>
    <h1 class="title_text">{{user.name}}'s Wish List</h1>
    <div class="row">
    {{#each user.wishlist}}
            <div class="col m6 s12 l3">
                <div class="card">
                    <div class="card-image">
                        <img class="max" src="{{this.image}}">
                    </div>
                    <div class="main_text card-action">
                        <a href="/users/{{../user._id}}/wishlists/{{this._id}}/delete">Delete</a>
                    </div>
                </div>
            </div>
    {{/each}}
    </div>
    <div>
        <a href="/users/{{user._id}}/wishlists/new" class="main_text waves-effect waves-light btn red darken-3">Add to this wishlist</a>
    </div><br>
</div>
            